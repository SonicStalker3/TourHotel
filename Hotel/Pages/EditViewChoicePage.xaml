<Page x:Class="HotelApp.EditViewChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditViewChoicePage">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="EditHotelBtn" Margin="5,5,5,5" Height="50" Click="EditHotelBtn_Click">
            <TextBlock TextWrapping="Wrap" Text="Редактирование Отелей"/>
        </Button>
        <Button x:Name="EditTourBtn" Margin="5,5,5,5" Height="50" Click="EditTourBtn_Click">
            <TextBlock TextWrapping="Wrap" Text="Редактирование Туров"/>
        </Button>
        <Button x:Name="ViewTourBtn" Margin="5,5,5,5" Height="50" Click="ViewTourBtn_Click">
            <TextBlock TextWrapping="Wrap" Text="Просмотр туров"/>
        </Button>
    </StackPanel>
</Page>
