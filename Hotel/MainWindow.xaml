<Window x:Class="HotelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp"
        mc:Ignorable="d"
        Title="Отель" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <!--<DockPanel Grid.Row="0" VerticalAlignment="Top">
            <Menu/>
        </DockPanel>-->
        <Grid Background="Aqua" Grid.Row="1">
            <Image HorizontalAlignment="Left" Source="/Travel Logo.jpg"/>
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock FontSize="20">Tour Company: Testing in test</TextBlock>
            </Label>
        </Grid>
        <Frame Background="Gray" Grid.Row="2" Source="Pages/LoginPage.xaml"></Frame>

        <Grid Background="Blue" Grid.Row="3"></Grid>
    </Grid>
</Window>
